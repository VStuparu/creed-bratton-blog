<form action="<%= submitPath %>" method="POST" enctype="multipart/form-data">
    <p>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= post.title %>" required>
    </p>
    <div id="image-upload-control">
        <p>
            <label for="image">Image</label>
            <input type="file" name="image" id="image" accept="image/png,image/jpg" <% if(imageRequired) { %> required
            <% } %>>
        </p>
        <img src="" alt="Selected image" upload-image>
    </div>
    <p>
        <label for="summary">Summary</label>
        <input type="text" name="summary" id="summary" value="<%= post.summary %>" required>
    </p>
    <p>
        <label for="content">Post content</label>
        <textarea name="content" id="content" rows="10" cols="46" required><%= post.content  %></textarea>
    </p>
    <button class="btn">Add post</button>
    <a href="/" class="btn-alt">Back to safety</a>
</form>